        <div class="reg_form-culprits">
  <div class="container">

    <div style="background-color: rgb(236, 236, 247) !important" class="jumbotron">
      <div class="container">
        <h1>Welcome to culprits page</h1>
        <p>Possession of hard drugs is a punishable offence under the jurisdiction of the Nigerian government.</p>
        <p>
          <a class="btn btn-primary btn-lg btn_custom" href="/register">Add new culprit</a>
        </p>
      </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
      <% allCulprits.forEach((culprit)=>{ %>
        <div class="col-lg-3 col-md-4 col-sm-6" style="margin-bottom: .1rem; margin-top: .9rem">
        <div class="img-thumbnail">
          <img style="width: 100%; height:100%" src="/assets/<%= culprit.passport %>" />
          <div class="caption">
            <p>Full Name: <strong><%= culprit.fullName %></strong></p>
            <p>Age: <strong><%= culprit.age %></strong></p>
            <p>Sex: <strong><%= culprit.sex %></strong></p>
            <p>Substance: <strong><%= culprit.nameOfDrug %></strong></p>
            <!-- <h4><%= culprit.lga %></h4>
            <h4><%= culprit.phoneNumber %></h4>
            <h4><%= culprit.occupation %></h4> -->
            
            <!-- <h4><%= culprit.drugPrice %></h4>
            <h4><%= culprit.frequency %></h4>
            <h4><%= culprit.sellerName %></h4>
            <h4><%= culprit.sellerLocation %></h4>
            <h4><%= culprit.description %></h4> -->
          </div>
          <p><a class="btn btn-primary btn_custom" href="/culprits/<%=culprit._id%>">More info</a></p>
        </div>
      </div>
        <% }) %>
    </div>


 

