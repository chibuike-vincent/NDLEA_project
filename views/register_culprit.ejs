<% include partials/forms_header%>

    <div class="reg_form">
    <form class="form-signin">
      <h1 class="h3 mb-3 font-weight-normal">Register a culprit</h1>
      <div class="form-group">
          <input type="text" id="fullName" class="form-control"  placeholder="Full Name" required autofocus name="fullName">
        </div>
      <div class="form-group">
        <input type="number" id="age" class="form-control" placeholder="Age" required autofocus name="age">
      </div>
      <div class="form-group">
        <input type="text" id="sex" class="form-control" placeholder="Sex" required name="sex">
      </div>

      <div class="form-group">
          <input type="text" id="lga" class="form-control"  placeholder="Local Government Area" required autofocus name="lga">
        </div>
      <div class="form-group">
        <input type="number" id="phoneNumer" class="form-control" placeholder="Phone Number" required autofocus name="phoneNumer">
      </div>
      <div class="form-group">
        <input type="text" id="occupation" class="form-control" placeholder="Occupation" required name="occupation">
      </div>

      <div class="form-group">
        <input type="text" id="nameOfDrug" class="form-control" placeholder="Name of Drug" required autofocus name="nameOfDrug">
      </div>
      <div class="form-group">
          <input type="text" id="drugPrice" class="form-control"  placeholder="Drug Price" required autofocus name="drugPrice">
      </div>
      <div class="form-group">
        <input type="text" id="frequency" class="form-control" placeholder="Frequency of Use" required name="frequency">
      </div>

      <div class="form-group">
          <input type="text" id="sellerName" class="form-control"  placeholder="seller's name" required autofocus name="sellerName">
        </div>
      <div class="form-group">
        <input type="text" id="sellerLocation" class="form-control" placeholder="Seller's Location" required autofocus name="sellerLocation">
      </div>
      <div class="form-group">
        <input type="file" id="passport" class="form-control" placeholder="Passport" required name="passport">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block btn_custom" type="submit">Submit</button>
      </div>
    </form>
  </div>
  
